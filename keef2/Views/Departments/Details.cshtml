@model Keefa1.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h4>@Model.name</h4>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
                 @if(Model.img == "")
                {
                      <img src="/images/R (1).jpg" style="width:200px; height:200px">  
                 }else{
                      <img src="\images\@Model.img" style="width:200px; height:200px">  
                 }
        </dt>
    </dl>
</div>
<div>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Doctor name</th>
      <th scope="col">phone number</th>
      <th scope="col">Image</th>
      <th></th>
    </tr>
  </thead>
  <tbody>    
      @foreach(var item in ViewBag.docs)
    { 
      <tr>
   
      <td >@item.fName @item.lName</td>
      <td >@item.mobilePhone</td>
      <td><img width=200 height=200 src="/images/@item.img" /></td>
      <td><a asp-action="details" asp-controller="doctors" asp-route-id ="@item.id">Details</a></td>
    
    </tr>
    }
  </tbody>
</table>
    

</div>
<div>
                  @if(User.IsInRole("Admin"))
                        {
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> <span>|</span>
                        }
    <a asp-action="Index">Back to List</a>
</div>

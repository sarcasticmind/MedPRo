@model Keefa1.Models.Department

@{
    ViewData["Title"] = "Delete";
}
<h3>Are you sure you want to delete this department?</h3>
<h4 class="text-danger">*All the doctors in @Model.name will be deleted permanently*</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            
        </dt>
        <dd class = "col-sm-10">
            <img width=200 src="/images/@Model.img" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-success">Cancel</a>
    </form>
</div>
